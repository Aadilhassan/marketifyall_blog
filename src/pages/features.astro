---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Features | Marketifyall';
const description = 'Discover the powerful features of Marketifyall - the AI-powered social media automation platform for startups.';
const permalink = Astro.site ? `${Astro.site.href}features` : 'https://marketifyall.com/features';
---

<BaseLayout title={title} description={description} permalink={permalink} current="features">
  <div class="container">
    <header class="page-header">
      <h1>Simple, Powerful Marketing Automation</h1>
      <p>Everything you need to grow your social media presence, beautifully integrated into one platform.</p>
    </header>

    <div class="features-grid">
      <!-- Social Media Automation -->
      <section class="feature">
        <div class="feature-content">
          <h2>Social Media Automation</h2>
          <p>Schedule and publish content across all major social platforms from one unified dashboard.</p>
          
          <div class="feature-details">
            <div class="platforms">
              <h3>Supported Platforms</h3>
              <div class="platform-list">
                <span>Facebook</span>
                <span>Instagram</span>
                <span>Twitter</span>
                <span>LinkedIn</span>
                <span>TikTok</span>
                <span>YouTube</span>
              </div>
            </div>
            
            <div class="capabilities">
              <h3>Key Features</h3>
              <ul>
                <li>AI-powered content generation</li>
                <li>Cross-platform scheduling</li>
                <li>Optimal timing recommendations</li>
                <li>Platform-specific optimization</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Ads Management -->
      <section class="feature">
        <div class="feature-content">
          <h2>Intelligent Ads Management</h2>
          <p>Create, optimize, and track advertising campaigns across Meta and Google with AI assistance.</p>
          
          <div class="feature-details">
            <div class="platforms">
              <h3>Ad Platforms</h3>
              <div class="platform-list">
                <span>Facebook Ads</span>
                <span>Instagram Ads</span>
                <span>Google Ads</span>
                <span>YouTube Ads</span>
              </div>
            </div>
            
            <div class="capabilities">
              <h3>Smart Features</h3>
              <ul>
                <li>AI-generated ad copy</li>
                <li>Audience targeting optimization</li>
                <li>Budget allocation recommendations</li>
                <li>Performance tracking & ROI analysis</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Customer Engagement -->
      <section class="feature">
        <div class="feature-content">
          <h2>Customer Engagement</h2>
          <p>Build meaningful relationships with intelligent response suggestions and automated communication workflows.</p>
          
          <div class="feature-details">
            <div class="platforms">
              <h3>Communication Channels</h3>
              <div class="platform-list">
                <span>Social DMs</span>
                <span>Email</span>
                <span>SMS</span>
                <span>WhatsApp</span>
                <span>Chatbots</span>
              </div>
            </div>
            
            <div class="capabilities">
              <h3>AI Capabilities</h3>
              <ul>
                <li>Intelligent response suggestions</li>
                <li>Sentiment analysis</li>
                <li>Lead qualification</li>
                <li>Personalized messaging at scale</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- Analytics & Insights -->
      <section class="feature">
        <div class="feature-content">
          <h2>Analytics & Market Intelligence</h2>
          <p>Stay ahead with comprehensive analytics, competitor monitoring, and SEO optimization tools.</p>
          
          <div class="feature-details">
            <div class="platforms">
              <h3>Intelligence Sources</h3>
              <div class="platform-list">
                <span>Social Analytics</span>
                <span>Competitor Monitoring</span>
                <span>SEO Tracking</span>
                <span>Market Trends</span>
              </div>
            </div>
            
            <div class="capabilities">
              <h3>Insights</h3>
              <ul>
                <li>Performance benchmarking</li>
                <li>Content gap analysis</li>
                <li>Keyword research & tracking</li>
                <li>Market sentiment analysis</li>
              </ul>
            </div>
          </div>
        </div>
      </section>
    </div>

    <!-- Simple CTA -->
    <section class="cta">
      <h2>Ready to streamline your marketing?</h2>
      <p>Join thousands of startups using Marketifyall to grow their online presence.</p>
      <div class="cta-actions">
        <a href="https://marketifyall.com" class="btn-primary">Start Free Trial</a>
        <a href="/blog" class="btn-secondary">Learn More</a>
      </div>
    </section>
  </div>
</BaseLayout>

<style>
  .page-header {
    text-align: center;
    margin-bottom: 4rem;
    padding: 2rem 0;
  }

  .page-header h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-main);
  }

  .page-header p {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .features-grid {
    display: grid;
    gap: 3rem;
    margin-bottom: 4rem;
  }

  .feature {
    border-bottom: 1px solid var(--border-color);
    padding-bottom: 3rem;
  }

  .feature:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .feature-content h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 0.75rem;
    color: var(--text-main);
  }

  .feature-content > p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .feature-details {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .feature-details h3 {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-main);
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .platform-list {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .platform-list span {
    background: var(--primary-color-light);
    color: var(--primary-color);
    padding: 0.375rem 0.75rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .capabilities ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .capabilities li {
    padding: 0.5rem 0;
    border-bottom: 1px solid var(--border-color);
    color: var(--text-secondary);
  }

  .capabilities li:last-child {
    border-bottom: none;
  }

  .cta {
    text-align: center;
    padding: 3rem 2rem;
    background: var(--primary-color-light);
    border-radius: 8px;
    margin-top: 2rem;
  }

  .cta h2 {
    font-size: 2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--text-main);
  }

  .cta p {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 500px;
    margin-left: auto;
    margin-right: auto;
  }

  .cta-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary, .btn-secondary {
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    text-decoration: none;
    font-weight: 500;
    font-size: 1rem;
    transition: all 0.2s ease;
    display: inline-block;
  }

  .btn-primary {
    background: var(--primary-color);
    color: white;
  }

  .btn-primary:hover {
    background: var(--primary-color-dark);
  }

  .btn-secondary {
    background: transparent;
    color: var(--primary-color);
    border: 1px solid var(--primary-color);
  }

  .btn-secondary:hover {
    background: var(--primary-color);
    color: white;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .page-header h1 {
      font-size: 2rem;
    }

    .page-header p {
      font-size: 1.125rem;
    }

    .feature-details {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .platform-list {
      justify-content: center;
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }

    .btn-primary, .btn-secondary {
      width: 200px;
    }
  }

  @media (max-width: 480px) {
    .page-header {
      margin-bottom: 2rem;
    }

    .features-grid {
      gap: 2rem;
    }

    .feature {
      padding-bottom: 2rem;
    }

    .cta {
      padding: 2rem 1rem;
    }
  }
</style>
